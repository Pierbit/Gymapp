<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <ImageView
        android:id="@+id/imageProPic"
        android:layout_width="220dp"
        android:layout_height="180dp"
        android:layout_marginTop="55dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/user_pro_pic_round" />

    <TextView
        android:id="@+id/textProName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="Francescomazz"
        android:textColor="@color/black"
        android:textSize="20dip"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageProPic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUsername"
        android:layout_width="300dip"
        android:layout_height="65dip"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textProName">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Username"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="FrancescoMazz"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/user_foreground" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/edit_icon_foreground" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardStatus"
        android:layout_width="300dip"
        android:layout_height="65dip"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardUsername">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Status"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="Utente esperto"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/user_foreground" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/edit_icon_foreground" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardEmail"
        android:layout_width="300dip"
        android:layout_height="65dip"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardStatus">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Email"
                android:textSize="15dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="fmazzocchi@gmail.com"
                android:textColor="@color/black"
                android:textSize="10dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/user_foreground" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/edit_icon_foreground" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPassword"
        android:layout_width="300dip"
        android:layout_height="65dip"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardEmail">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Password"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="**********"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/user_foreground" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/edit_icon_foreground" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPalestra"
        android:layout_width="300dip"
        android:layout_height="65dip"
        android:layout_marginTop="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardPassword">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="Palestra"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="10dp"
                android:text="Jonny Bravo"
                android:textColor="@color/black" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="41dp"
                android:layout_gravity="center_vertical|left"
                android:layout_marginLeft="30dp"
                app:srcCompat="@drawable/user_foreground" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="65dp"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="30dp"
                app:srcCompat="@drawable/edit_icon_foreground" />
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>