<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView1"
    android:layout_width="350dip"
    android:layout_height="200dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="10dip"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@id/nome_esercizio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"
            android:textSize="20dip"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageSets"
            android:layout_width="72dp"
            android:layout_height="77dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nome_esercizio"
            app:srcCompat="@drawable/gym_1_foreground" />

        <TextView
            android:id="@+id/textSets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/button_tutorial"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageReps"
            android:layout_width="50dp"
            android:layout_height="59dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageSets"
            app:layout_constraintTop_toBottomOf="@+id/nome_esercizio"
            app:srcCompat="@drawable/orari_foreground" />

        <TextView
            android:id="@+id/textReps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/button_tutorial"
            app:layout_constraintStart_toEndOf="@+id/textSets" />

        <ImageView
            android:id="@+id/imageRest"
            android:layout_width="61dp"
            android:layout_height="68dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/imageReps"
            app:layout_constraintTop_toBottomOf="@+id/nome_esercizio"
            app:srcCompat="@drawable/hourglass_foreground" />

        <TextView
            android:id="@+id/textRest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/button_tutorial"
            app:layout_constraintStart_toEndOf="@+id/textReps" />

        <Button
            android:id="@+id/button_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:text="Visualizza tutorial"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>